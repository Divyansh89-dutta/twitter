<%- include('./partials/header.ejs') %>

<!-- Top Header -->
<div class="relative bg-blue-500 h-32 flex items-center px-4">
    <a href="/" class="absolute left-4 text-white">
        <i class="ri-arrow-left-line text-2xl"></i>
    </a>
    <a href="#" class="absolute right-4 text-white">
        <i class="ri-search-line text-2xl"></i>
    </a>
</div>

<!-- Profile Section -->
<div class="bg-gray-900 text-white py-6 px-4">
    <div class="flex items-center space-x-6">
        <!-- Profile Image -->

        <img src="/images/uploads/<%= user.profilePicture %>" alt="Profile Picture" class="w-24 h-24 rounded-full border-4 border-gray-800" />
        <!-- Profile Info -->
        <div class="flex-1">
            <h1 class="text-2xl font-bold capitalize"><%= user.username %></h1>
            <p class="text-sm text-gray-400">@<%= user.username %></p>
            <div class="mt-4 space-x-4">
                <a href="/edit" class="px-4 py-2 bg-blue-500 rounded-full text-sm">Edit Profile</a>
                <button class="px-4 py-2 bg-gray-700 rounded-full text-sm">Get Verified</button>
            </div>
        </div>
    </div>

    <!-- Bio Section -->
    <p class="mt-6 text-sm">
        Founder | Sheryians Coding School ü¶Å Talks about students, their problems, their life & their goals.
        Connect if you care about students as well.
    </p>

    <!-- Metadata Section -->
    <div class="mt-6 space-y-2 text-sm text-gray-400">
        <p><i class="ri-briefcase-line mr-2"></i> Entrepreneur <span class="ml-2 text-gray-200">Bhopal</span></p>
        <p><i class="ri-link-line mr-2"></i> <a href="#" class="text-blue-500">sheryians.com</a></p>
        <p><i class="ri-calendar-line mr-2"></i> Born 7 October 1998</p>
        <p><i class="ri-time-line mr-2"></i> Joined May 2020</p>
    </div>

    <!-- Followers and Following -->
    <div class="mt-6 flex space-x-6 text-gray-400">
        <p><span class="text-white font-bold">17</span> Following</p>
        <p><span class="text-white font-bold">408</span> Followers</p>
    </div>
</div>

<!-- Navigation Section -->
<div class="bg-gray-800 text-gray-400 flex justify-around text-sm border-b border-gray-700">
    <button class="py-3 text-white border-b-2 border-blue-500">Posts</button>
    <button class="py-3 hover:text-white">Replies</button>
    <button class="py-3 hover:text-white">Highlights</button>
    <button class="py-3 hover:text-white">Articles</button>
    <button class="py-3 hover:text-white">Media</button>
    <button class="py-3 hover:text-white">Likes</button>
</div>

<!-- Tweet Section -->
<div class="bg-gray-900 p-6 border-b border-gray-700">
    <p class="text-sm text-gray-400">You reposted</p>
    <div class="mt-4">
        <div class="flex space-x-4">
            <!-- Tweet Author Profile -->
            <img src="https://via.placeholder.com/40" alt="Profile Picture" class="w-10 h-10 rounded-full" />
            <div class="flex-1">
                <p class="text-sm">
                    <span class="font-bold text-white">Hasir Ali</span>
                    <span class="text-gray-400">@haxir_ali</span> ‚Ä¢ 02/05/24
                </p>
                <p class="mt-2 text-sm text-gray-200">
                    üöÄ <span class="text-blue-500">#Day94</span> of
                    <span class="text-blue-500">#100DaysOfCode</span>:
                    <br>
                    üçÄ Gaining confidence after putting theory into practice. Big shoutout to
                    <span class="text-blue-500">@sheryians_</span> and
                    <span class="text-blue-500">@harshbhaiyaa</span> for simplifying concepts as much as possible!
                </p>
                <!-- Tweet Placeholder -->
                <div class="mt-4 bg-gray-800 h-48 flex justify-center items-center rounded-lg">
                    <i class="ri-loader-4-line text-white text-3xl animate-spin"></i>
                </div>
            </div>
        </div>
        <!-- Tweet Actions -->
        <div class="mt-4 flex items-center space-x-6 text-gray-400 text-sm">
            <button class="hover:text-white flex items-center space-x-1">
                <i class="ri-chat-3-line"></i> <span>Reply</span>
            </button>
            <button class="hover:text-white flex items-center space-x-1">
                <i class="ri-repeat-line"></i> <span>Repost</span>
            </button>
            <button class="hover:text-white flex items-center space-x-1">
                <i class="ri-heart-line"></i> <span>Like</span>
            </button>
            <button class="hover:text-white flex items-center space-x-1">
                <i class="ri-bar-chart-box-line"></i> <span>Stats</span>
            </button>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
