<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account - Twitter</title>
    <!-- Latest Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Remix Icon CDN -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #1da1f2, #14171a);
        }

        input:focus::placeholder {
            opacity: 0;
            transition: opacity 0.2s ease-in-out;
        }
    </style>
</head>

<body class="text-white h-screen flex items-center justify-center">
    <!-- Box Container -->
    <div class="w-full max-w-md bg-black/70 rounded-lg shadow-lg p-6 space-y-6">
        <!-- Top Navigation -->
        <div class="flex items-center justify-between">
            <a href="/" class="text-white text-sm hover:underline">Cancel</a>
            <a href="/login">
                <i class="ri-twitter-fill text-3xl hover:scale-110 transform transition-transform duration-300"></i>
            </a>
        </div>

        <!-- Main Content -->
        <div>
            <h1 class="text-2xl font-bold leading-snug mb-6">
                Create your account
            </h1>
            <% if (error) { %>
            <div class="font-semibold text-red-500">
                <%= error %>
            </div>
            <% } %>
            <!-- Form -->
            <form autocomplete="off" action="/register" method="post" class="space-y-6">
                <input name="username" type="text" placeholder="Phone, email, or username"
                    class="w-full bg-transparent border-b border-gray-500 text-white placeholder-gray-400 focus:outline-none focus:border-blue-500 py-2 text-lg transition-colors duration-300" />
                <input type="password" name="password" placeholder="Password"
                    class="w-full bg-transparent border-b border-gray-500 text-white placeholder-gray-400 focus:outline-none focus:border-blue-500 py-2 text-lg transition-colors duration-300" />
                <div class="mt-4 flex justify-end">
                    <button disabled
                        class="bg-gray-700 text-white text-sm py-2 px-6 rounded-full opacity-50 cursor-not-allowed transition-all duration-300">
                        Create account
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Input Script -->
    <script>
        const inputs = document.querySelectorAll('input');
        const button = document.querySelector('button');

        function checkInputs() {
            const allFilled = Array.from(inputs).every(input => input.value.trim().length > 0);
            button.disabled = !allFilled;
            button.classList.toggle('opacity-50', !allFilled);
            button.classList.toggle('cursor-not-allowed', !allFilled);
            button.classList.toggle('bg-blue-500', allFilled);
            button.classList.toggle('bg-gray-700', !allFilled);
        }

        inputs.forEach(input => {
            input.addEventListener('input', checkInputs);
        });
    </script>
</body>

</html>
